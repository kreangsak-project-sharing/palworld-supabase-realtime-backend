generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model realtime_loginrecord {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  name       String
  playerId   String
  userId     String
  ip         String
  ping       Int?
  location_x Int
  location_y Int
  level      Int
}

model realtime_metrics {
  id               Int      @id @default(autoincrement())
  created_at       DateTime @default(now())
  uptime           Int
  serverfps        Int
  maxplayernum     Int
  serverframetime  Int
  currentplayernum Int
}

model realtime_playersonline {
  id          Int      @id @default(autoincrement())
  created_at  DateTime @default(now())
  player_data Json
}

